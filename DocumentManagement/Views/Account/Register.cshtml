@model DocumentManagement.Models.Entities.User
@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-[#6B73FF] to-[#000DFF] relative overflow-hidden sm:px-4 px-2 py-8">
        <div class="absolute top-0 left-0 w-64 h-64 bg-white/10 rounded-full -translate-x-16 -translate-y-16"></div>
        <div class="absolute bottom-0 right-0 w-64 h-64 bg-white/10 rounded-full translate-x-16 translate-y-16"></div>

        <div class="bg-white bg-gradient-to-b from-white to-[#F9F9FF] rounded-xl shadow-lg p-6 w-full max-w-sm relative z-10">
            <div class="flex justify-center mb-4 relative">
                <div class="bg-gradient-to-tr from-[#FF4E8B] to-[#FF6A6A] rounded-full w-14 h-14 flex items-center justify-center shadow-md">
                    <i class="fas fa-user-plus text-white text-lg"></i>
                </div>
            </div>
            <h2 class="text-[#D93B8A] font-semibold text-lg text-center mb-1">
                Đăng Ký Tài Khoản
            </h2>
            <p class="text-center text-xs text-gray-500 mb-5">
                Tạo tài khoản mới để bắt đầu
            </p>

            <form asp-controller="Account" asp-action="Register" method="post" class="space-y-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs"></div>

                <div>
                    <label asp-for="FullName" class="block text-[10px] font-semibold text-[#6B73FF] mb-1 flex items-center gap-1">
                        <i class="fas fa-user text-[10px]"></i> Họ và Tên
                    </label>
                    <input asp-for="FullName" class="w-full text-xs rounded-md border border-gray-300 px-3 py-2 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-[#6B73FF]" placeholder="Nguyễn Văn A" />
                    <span asp-validation-for="FullName" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-[10px] font-semibold text-[#6B73FF] mb-1 flex items-center gap-1">
                        <i class="fas fa-envelope text-[10px]"></i> Địa chỉ Email
                    </label>
                    <input asp-for="Email" class="w-full text-xs rounded-md border border-gray-300 px-3 py-2 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-[#6B73FF]" placeholder="your@email.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Workplace" class="block text-[10px] font-semibold text-[#6B73FF] mb-1 flex items-center gap-1">
                        <i class="fas fa-building text-[10px]"></i> Đơn vị công tác
                    </label>
                    <input asp-for="Workplace" class="w-full text-xs rounded-md border border-gray-300 px-3 py-2 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-[#6B73FF]" placeholder="Phòng ban / Công ty" />
                    <span asp-validation-for="Workplace" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-[10px] font-semibold text-[#6B73FF] mb-1 flex items-center gap-1">
                        <i class="fas fa-lock text-[10px]"></i> Mật Khẩu
                    </label>
                    <div class="relative">
                        <input asp-for="Password" class="w-full text-xs rounded-md border border-gray-300 px-3 py-2 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-[#6B73FF]" placeholder="********" />
                        <button id="togglePassword" aria-label="Toggle password visibility" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 text-xs" type="button">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>

                <button class="w-full text-xs font-semibold text-white bg-gradient-to-r from-[#FF4E8B] to-[#FF6A6A] rounded-md py-2 flex items-center justify-center gap-2 mt-4" type="submit">
                    <i class="fas fa-check-circle"></i>
                    Tạo Tài Khoản
                </button>
            </form>

            <p class="text-center text-[10px] text-gray-500 mt-4">
                Đã có tài khoản?
                <a class="text-[#D93B8A] font-semibold" asp-controller="Account" asp-action="Login">
                    Đăng nhập ngay
                </a>
            </p>
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('Password'); // ID được tạo bởi asp-for="Password"
        const icon = togglePassword.querySelector('i');

        togglePassword.addEventListener('click', function () {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>