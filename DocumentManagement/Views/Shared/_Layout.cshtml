<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Công Văn</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-[#F8F9FB] text-[#1E1E2D]">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-60 bg-white border-r border-gray-200 flex-col hidden sm:flex">
            <div class="flex items-center gap-2 px-5 py-4 border-b border-gray-200">
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 text-[#1E1E2D] font-semibold text-sm">
                    <i class="fas fa-folder-open text-[#2F80ED] text-base"></i>
                    Quản Lý Văn Bản
                </a>
            </div>
            <nav class="flex flex-col mt-6 space-y-1 px-2">
                <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3 px-4 py-2 rounded text-sm font-medium hover:bg-gray-100 @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "bg-blue-50 text-blue-700" : "text-gray-600")">
                    <i class="fas fa-home fa-fw"></i> Trang Chủ
                </a>
                <a asp-controller="Documents" asp-action="Inbox" class="flex items-center gap-3 px-4 py-2 rounded text-sm font-medium hover:bg-gray-100 @(ViewContext.RouteData.Values["action"].ToString() == "Inbox" ? "bg-blue-50 text-blue-700" : "text-gray-600")">
                    <i class="fas fa-inbox fa-fw"></i> Văn Bản Đến
                </a>
                <a asp-controller="Documents" asp-action="Sent" class="flex items-center gap-3 px-4 py-2 rounded text-sm font-medium hover:bg-gray-100 @(ViewContext.RouteData.Values["action"].ToString() == "Outbox" ? "bg-blue-50 text-blue-700" : "text-gray-600")">
                    <i class="fas fa-paper-plane fa-fw"></i> Văn Bản Đi
                </a>
                <a asp-controller="Documents" asp-action="Create" class="flex items-center gap-3 px-4 py-2 rounded text-sm font-medium hover:bg-gray-100 @(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "bg-blue-50 text-blue-700" : "text-gray-600")">
                    <i class="fas fa-edit fa-fw"></i> Soạn Thảo
                </a>
                <a asp-controller="Documents" asp-action="Search" class="flex items-center gap-3 px-4 py-2 rounded text-sm font-medium hover:bg-gray-100 @(ViewContext.RouteData.Values["action"].ToString() == "Search" ? "bg-blue-50 text-blue-700" : "text-gray-600")">
                    <i class="fas fa-search fa-fw"></i> Tra Cứu
                </a>
            </nav>
        </aside>

        <!-- Main content -->
        <div class="flex-1 flex flex-col">
            <header class="flex items-center justify-between px-6 py-3 bg-white border-b border-gray-200 sticky top-0 z-10">
                <h1 class="text-lg font-semibold text-gray-800">@ViewData["Title"]</h1>
                <div class="flex items-center space-x-4">
                    <button aria-label="Notifications" class="text-gray-500 hover:text-gray-700"><i class="fas fa-bell"></i></button>
                    <partial name="_LoginPartial" />
                </div>
            </header>
            <main class="flex-1 p-6">
                @RenderBody()
            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>